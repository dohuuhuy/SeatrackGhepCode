<div id="main-wait">
    <div id="wait">
        Đang cập nhật dữ liệu, vui lòng chờ giây lát ... <br />
        <img src="~/Content/images/icon/waiting4.gif" width="64" height="64" />
    </div>
</div>
<style>
    #main-wait {
        display: none;
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        padding: 2px;
        background-color: #fff;
        z-index:9;
        opacity:0.8;
    }
    #wait {
        margin-top:25%;    
    }

</style>
<script>

    var wait = function () {
        $(document).ajaxStart(function () {
            $("#main-wait").css("display", "block");
        });
        $(document).ajaxComplete(function () {
            $("#main-wait").css("display", "none");
        });
   
    };
    setTimeout(wait(), 2000);
</script>