
@{
    ViewBag.Title = "BaoCaoTongHopTheoTau";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="main" id="list-bgt">
    <div class="wrapper">
        @Html.Partial("_MenuBaoCaoChoBo")


        <div id="content-bgt-tonghopxe" class="content">
            <div id="signupbox" class="mainbox">
                <div class="panel panel-primary">
                    <div class="jumbotron ">
                        <h2>Báo cáo tổng hợp theo tàu</h2>
                    </div>
                    <div class="panel-body container">
                        <form method="post" action=".">
                            <div id="" class="form-group row  required">
                                <div class="col-md-3 clearfix text-right">
                                    <label for="id_password1" class="control-label  requiredField">Chọn ngày</label>
                                </div>
                                <div class="controls col-md-7 clearfix">
                                    <div class="input-group date m-b-5">
                                        <input id="datefilter" class="form-control" type="text" name="datefilter" value="" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group row ">
                                <div class="col-md-3 clearfix text-right">
                                    <label class="control-label "> Số hiệu <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-5 clearfix">
                                    <select id="listDeviceNo" class="form-control select2 fl" style="width:100%"></select>
                                </div>
                                <div class="xem col-md-4 clearfix">
                                    <input type="button" name="Signup" value="Xem" class="btn btn-primary btn" style="width:135px;" onclick="TongHopTheoTau();" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="p-10 table-responsive">
                        <button class="btn btn-secondary" onclick="exportTableToExcel('table_bgt_tonghoptau','BaoCaoTongHopTheoTau')">Export Excel</button>

                        <table id="table_bgt_tonghoptau" class="table  table-bordered text-center" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="headerAlignCenter">STT</th>
                                    <th class="headerAlignCenter">Thời gian bắt đầu</th>
                                    <th class="headerAlignCenter">Thời gian kết thúc</th>
                                    <th class="headerAlignCenter">Quảng đường <br /> (Hải lý)</th>
                                    <th class="headerAlignCenter">Tốc độ trung bình <br /> (Hải lý/Giờ)</th>
                                    <th class="headerAlignCenter">Tốc độ tối đa <br /> (Hải lý/Giờ)</th>
                                </tr>
                            </thead>
                            <tbody id="tonghoptheotau"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
