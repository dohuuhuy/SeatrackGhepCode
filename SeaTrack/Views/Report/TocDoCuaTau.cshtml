
@{
    ViewBag.Title = "TocDoCuaTau";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="main" id="list-bgt">
    <div class="wrapper">
        @Html.Partial("_MenuBaoCaoChoBo");

        <div id="content-bgt-tocdo" class="content">
            <div id="signupbox" class="mainbox">
                <div class="panel panel-primary">
                    <div class="jumbotron">
                        <h2>BÁO CÁO TỐC ĐỘ TÀU</h2>
                    </div>
                    <div class="panel-body container">
                        <form method="post" action=".">
                            <div id="" class="form-group row  required">
                                <div class="col-md-3 clearfix text-right">
                                    <label for="id_password1" class="control-label  requiredField">Chọn ngày</label>
                                </div>
                                <div class="controls col-md-7 clearfix">
                                    <div class="input-group date m-b-5">
                                        <input id="datefilter" class="form-control" type="text" name="datefilter" value="" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group row ">
                                <div class="col-md-3 clearfix text-right">
                                    <label class="control-label "> Số hiệu <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-5 clearfix">
                                    <select id="listDeviceNo" class="form-control select2 fl" style="width:100%"></select>
                                </div>
                                <div class="col-md-4 clearfix">
                                    <input type="button" name="Signup" value="Xem" class="btn btn-primary btn" style="width:135px;" onclick="TocDoCuaTau();" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="p-10">
                        <table id="table_bgt_tocdo" class="table table-bordered text-center" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="headerAlignCenter">STT</th>
                                    <th class="headerAlignCenter">Từ ngày</th>
                                    <th class="headerAlignCenter">Đến ngày</th>
                                    <th class="headerAlignCenter">Vận tốc trung bình <br /> (Hải lý/Giờ)</th>
                                    <th class="headerAlignCenter">Vận tốc tối đa  <br /> (Hải lý/Giờ)</th>
                                    <th class="headerAlignCenter">Quảng đường  <br /> (Hải lý)</th>
                                </tr>
                            </thead>
                            <tbody id="tbody_tocdocuatau"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
