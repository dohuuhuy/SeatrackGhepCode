
@{
    ViewBag.Title = "BaoCaoTongHopHoatDong";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}


<div class="main" id="list_business">
    <div class="wrapper">
        <div id="sidebar2" class=" si-sidebar s-sidebar">
            <div class="sidebar-header s-flexible s-just-center">
                <img src="/Content/public/img/logo-vinasia.png" class="s-logo-dom">
            </div>
            <hr>
            <a href="#sub-menu-1" class="list-group-item active" data-toggle="collapse" data-parent="#sub-menu"> Báo cáo tổng hợp<span class="caret pull-right m-t-5"></span></a>
            <div class="collapse list-group-level1 in show" id="sub-menu-1">
                <a id="menu-dn-tonghop " href="~/Report/SummaryActivityReport" class="list-group-item" data-parent="#sub-menu"><img src="/Content/images/icon/business.png" /> Báo cáo tổng hợp hoạt động</a>
                <a id="menu-dn-chitiet" href="~/Report/DetailedActivityReport" class="list-group-item" data-parent="#sub-menu"><img src="/Content/images/icon/bar-chart.png" /> Báo cáo chi tiết hoạt động</a>
                <a id="menu-dn-tonghopkm" href="~/Report/SummaryReportOfScopeOfActivities" class="list-group-item" data-parent="#sub-menu"><img src="/Content/images/icon/phamvi.png" /> Báo cáo tổng hợp phạm vi tàu hoạt động</a>
            </div>
        </div>

        <div id="content-dn-tonghop" class="content">
            <div id="signupbox" class="mainbox">
                <div class="panel panel-primary">
                    <div class="jumbotron ">
                        <h2>BÁO CÁO TỔNG HỢP HOẠT ĐỘNG</h2>
                    </div>
                    <div class="panel-body container">
                        <form method="post" action=".">
                            <div id="" class="form-group row  required">
                                <div class="col-md-3 clearfix text-right">
                                    <label for="id_password1" class="control-label  requiredField">Chọn ngày</label>
                                </div>
                                <div class="controls col-md-7 clearfix">
                                    <div class="input-group date m-b-5">
                                        <input id="content-dn-tonghop-date" class="form-control" type="text" name="datefilter" value="" />
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="fa fa-calendar"></i>&nbsp;
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 clearfix">#</div>
                            </div>
                            <div class="form-group row ">
                                <div class="col-md-3 clearfix text-right">
                                    <label class="control-label "> Số hiệu <span class="text-danger">*</span></label>
                                </div>
                                <div class="col-md-5 clearfix">
                                    <select id="dn_listxe_tonghop" class="form-control select2 fl" style="width:100%"></select>
                                </div>
                                <div class="col-md-4 clearfix">
                                    <input type="button" name="Signup" value="Xem" class="btn btn-primary btn" style="width:135px;" onclick="Report_DN_TongHop();" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="p-10">
                        <table id="table_dn_tonghop" class="table  table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="headerAlignCenter">Thời gian bắt đầu</th>
                                    <th class="headerAlignCenter">Thời gian kết thúc</th>
                                    <th class="headerAlignCenter">Phạm vi hoạt dộng</th>
                                    <th class="headerAlignCenter">Tốc độ trung bình</th>
                                    <th class="headerAlignCenter">Tốc độ tối đa</th>
                                </tr>
                            </thead>
                            <tbody id="tbody_dn_tonghop"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>